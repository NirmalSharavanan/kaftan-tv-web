{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "version": "1.0.0",
    "name": "Kaftan"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "ss",
      "styles": [
        "../node_modules/font-awesome/scss/font-awesome.scss",
        "../node_modules/simple-line-icons/scss/simple-line-icons.scss",
        "../node_modules/primeng/resources/themes/omega/theme.css",
        "../node_modules/primeng/resources/primeng.min.css",
        "../node_modules/owl.carousel/dist/assets/owl.carousel.css",
        "../node_modules/owl.carousel/dist/assets/owl.theme.default.css",
        "../node_modules/quill/dist/quill.core.css", 
        "../node_modules/quill/dist/quill.snow.css",
        "../node_modules/summernote/dist/summernote-lite.css",
        "assets/steller/css/stellar.css",
        "assets/steller/css/stellar-font-awesome.css",
        "assets/steller/css/jquery.mCustomScrollbar.css",
        "assets/kaftan/plugin/socialshare/jquery.sharebox.css"

      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/tether/dist/js/tether.min.js",
        "../node_modules/hammerjs/hammer.js",
        "../node_modules/bootstrap/dist/js/bootstrap.js",
        "../node_modules/owl.carousel/dist/owl.carousel.js",
        "../node_modules/hls.js/dist/hls.min.js",
        "../node_modules/quill/dist/quill.js",
	      "../node_modules/summernote/dist/summernote-lite.js",
        "assets/steller/js/jquery.mCustomScrollbar.js",
        "assets/steller/js/videoPlayer.js",
        "assets/steller/js/Playlist.js",
        "assets/steller/js/iphone-inline-video.js",
        "../node_modules/chart.js/dist/Chart.js",
        "assets/kaftan/plugin/socialshare/jquery.sharebox.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {
      "spec": false
    },
    "service": {
      "spec": false
    }
  }
}